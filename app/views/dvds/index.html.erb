<h1>Listing dvds</h1>

<table>
  <thead>
    <tr>
      <th>Dvdid</th>
      <th>Dvdname</th>
      <th>Status</th>
      <th>Dvdtype</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dvds.each do |dvd| %>
      <tr>
        <td><%= dvd.dvdid %></td>
        <td><%= dvd.dvdname %></td>
        <td><%= dvd.status %></td>
        <td><%= dvd.dvdtype %></td>
        <td><%= dvd.price %></td>
        <td><%= link_to 'Show', dvd %></td>
        <td><%= link_to 'Edit', edit_dvd_path(dvd) %></td>
        <td><%= link_to 'Destroy', dvd, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

