<!DOCTYPE html>
<html>
<div class="container">
  <div class="jumbotron">
    <p class="lead">

    <h1>Listing cards</h1>

<table class="table">
  <thead>
    <tr>
      <th>Cardid</th>
      <th>Userid</th>
      <th>Status</th>
      <th>Card num</th>
      <th>Pw</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.cardid %></td>
        <td><%= card.userid %></td>
        <td><%= card.status %></td>
        <td><%= card.cardnum %></td>
        <td><%= card.pw %></td>
        <td><%= card.balance %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path %>
    </p>
  </div>
</div>
</html>